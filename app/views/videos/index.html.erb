<h1>hola</h1>

	<h5><%= @video.title %></h5>
	<h6><%= @video.url %></h6>
	<div class="plyr">
	    <div 
	    	data-video-id="<%= @video.media_id %>" 
	    	data-type="<%= @video.provider %>">
	    </div>
	</div>
	
	<div id="next_video">
		<h2>Next one</h2>
		<span><%= @playlist[0].title %></span>
		<%= image_tag(@playlist[0].thumbnail, :alt => "rss feed", :width => '250px') %>
	</div>

	<%= javascript_tag do %>
	  	window.playlist = <%= raw @playlist.to_json %>
	<% end %>
